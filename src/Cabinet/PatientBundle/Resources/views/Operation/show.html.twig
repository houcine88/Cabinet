{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Operation</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Doit</th>
                <td>{{ entity.doit }}</td>
            </tr>
            <tr>
                <th>Recu</th>
                <td>{{ entity.recu }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('operation') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('operation_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
