#}
<div class="panel panel-default">
    <div class="panel-body">
        <div id="operationsPatient" url="{{ path('operation_getOperations',{'idFiche':entity.fiche.id, 'page':1}) }}">
            {{ render(controller('CabinetPatientBundle:Operation:getOperations',{'idFiche':entity.fiche.id, 'page':app.request.get('page')}))}}
            </div>
        </div>
    </div>


    <ul class="record_actions">
        <li>
            <a href="{{ path('patient') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('patient_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}