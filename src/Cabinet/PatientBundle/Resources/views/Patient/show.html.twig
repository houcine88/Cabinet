{% extends '::layoutMedecin.html.twig' %}

{% block body -%}
<div class="panel panel-default">
    <div class="panel-heading">
        <table style="width: 100%;">
            <tr>
                <td style="text-align: left;"><h4>Fiche patient</h4></td>
                <td style="text-align: right;"><h5>Numero dossier: {{ entity.fiche.id }}/{{ entity.fiche.annee|date('Y') }}</h5></td>
            </tr>
        </table>
    </div>
    <div class="panel-body">
        <table class="record_properties">
            <tbody>

                <tr>
                    <th>Nom :</th>
                    <td>{{ entity.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom :</th>
                    <td>{{ entity.prenom }}</td>
                </tr>
                <tr>
                    <th>Date de naissance :</th>
                    <td>{{ entity.dateNaissance|date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th>Adresse :</th>
                    <td>{{ entity.adresse }}</td>
                </tr>
                <tr>
                    <th>Telephonne :</th>
                    <td>{{ entity.tel }}</td>
                </tr>
                <tr>
                    <th>Cin :</th>
                    <td>{{ entity.cin }}</td>
                </tr>

            </tbody>
        </table>

    </div>
</div>
{#

